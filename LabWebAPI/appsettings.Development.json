{
  //===========Connection===========
  "ConnectionStrings": {
    "DefaultConnection": "Server=LAPTOP-RR1UH4B6\\SQLEXPRESS;Database=LAB;Trusted_Connection=True; TrustServerCertificate=true;"
  },


  //==============Log==============
  //資料紀錄[必要]
  "Serilog": {
    //預設要顯示的最低級別
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    //紀錄要流向的地方
    "WriteTo": [
      //consele視窗要顯示紀錄
      { "Name": "Console" },
      //要儲存一份到txt(每小時一份txt)(如不需要可移除)
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Debug",
          // 檔案路徑
          "path": "C:\\logs\\WebAPI\\log-.txt",
          // 檔案捲動間隔
          "rollingInterval": "Hour",
          // 啟用檔案大小限制
          "RollOnFileSizeLimit": true,
          // 輸出範本
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Properties:j}{NewLine}{Exception}",
          // 格式化文件內容配置 #CompactJsonFormatter顯著減少字節數，同時易於閱讀，以精簡的格式以及排除冗餘信息來實現此目的。
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "retainedFileCountLimit": "1400"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
